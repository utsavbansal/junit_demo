pipeline
{
	agent any
	tools
	{
		maven	'Maven 3.3.9'
		jdk 'jdk8' 
	}
	stages
	{
		stage('Build')
		{
			steps
			{
				git 'https://github.com/utsavbansal/junit_demo.git'
				sh './mvnw clean compile'
			}
		}
		stage('Test')
		{
			steps
			{
				sh './mvnw test'
			}
			post
			{
				always	
				{
					junit '**/target/surefire-reports/Test-*.xml'
				}
			}
		}
	}
	
}